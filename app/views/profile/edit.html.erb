<%= render 'shared/navbarAdmin' %>
<%= render 'shared/flash_messages' %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @user.errors.any? %>
        <div class="alert alert-warning" role="alert">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card">
        <div class="card-body">
          <h3 class="card-title text-center">Edit Profile</h3>
          <%= form_with model: @user, url: profile_path(@user), method: :put, local: true, html: { multipart: true }, class: "form-signin" do |form| %>
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: "form-control", placeholder: "Name", required: true %>
            </div>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, class: "form-control", placeholder: "Email", required: true %>
            </div>
            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: "form-control", placeholder: "Password", required: true %>
            </div>
            <div class="form-group">
              <%= form.label :college %>
              <%= form.text_field :college, class: "form-control", placeholder: "College Name", required: true %>
            </div>
            <div class="form-group">
              <%= form.label :profile_image %>
              <% if @user.persisted? && @user.profile_image.attached? %>
                <div class="mb-3">
                  <p>Current profile image: <b> <%= @user.profile_image.filename.to_s  %> </b> </p>
                </div>
              <% end %>
              <%= form.file_field :profile_image, class: "form-control-file", accept: "image/jpeg,image/png" %>
            </div>
            <div class="form-group">
              <%= form.label :linkedin_link %>
              <%= form.url_field :linkedin_link, class: "form-control", placeholder: "LinkedIn Profile", required: true %>
            </div>
            <%= form.submit "Submit", class: "btn btn-lg btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
