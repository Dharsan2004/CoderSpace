<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center mb-4">
        <h1 class="display-4 font-weight-bold">Solver Space</h1>
      </div>

      <%= render 'shared/flash_messages' %>

      <div class="card">
        <div class="card-body">
          <h3 class="card-title text-center">Login</h3>
          <%= form_with url: login_path, local: true, class: "form-signin" do |form| %>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, class: "form-control", placeholder: "Email", required: true %>
            </div>
            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: "form-control", placeholder: "Password", required: true %>
            </div>
             <div class="mt-2">
            <%= form.submit "Login", class: "btn  btn-primary btn-block" %>
            </div>
          <% end %>
          <div class="text-center mt-3">
            <%= link_to "New user? Sign up here", signup_path, class: "btn btn-link mt-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
